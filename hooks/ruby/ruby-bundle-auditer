#!/usr/bin/env ruby
require 'English'

# NOTE: pre-commit framework only prints output if:
# * exit-status is non-zero, or
# * CLI uses `--verbose`
args = ARGV.join(' ')
puts "args: #{args}"
puts ''

output = `bundle-audit check #{args} 2>&1`
status = $CHILD_STATUS.exitstatus
puts output

exit status
