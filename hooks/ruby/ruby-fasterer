#!/usr/bin/env ruby
require 'English'

# This wrapper is needed because "fasterer" always prints output,
# but pre-commit looks better if there is no output on success.
args = ARGV.join(' ')
puts args if ENV['DEBUG']

output = `fasterer #{args} 2>&1`
status = $CHILD_STATUS.exitstatus
puts output if status != 0

exit status
